{
    "manifest_version": 3,
    "name": "React Chrome Extension",
    "version": "0.1",
    "description": "Boilerplate manifest for React based Chrome Extension using Google's Manifest v3",
    "permissions": ["webNavigation","desktopCapture","downloads","scripting"],
    "author": "Christian Sendler",
    "homepage_url": "https://github.com/casendler/",
    "short_name": "React Extension",
    "action": {
        "default_popup": "popup.html",
        "default_title": "React Chrome Extension"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["content-script.js"],
            "css":["chessground.css","theme.css"]
        }
    ],
    "web_accessible_resources": [{
        "resources":["thumb0002.jpg","my-model.json","my-model.weights.bin"],
        "matches":["<all_urls>"]
    }]
}
